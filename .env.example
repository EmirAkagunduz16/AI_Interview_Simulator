# ============================================
# AI Coach - Environment Variables
# ============================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# cp .env.example .env

# ============================================
# ZORUNLU API KEY'LER
# ============================================

# Gemini API Key - AI değerlendirme ve soru üretimi için
# https://aistudio.google.com/app/apikey adresinden alınabilir
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# VAPI - Sesli AI mülakat asistanı
# https://vapi.ai adresinden alınabilir
VAPI_PRIVATE_KEY=your-vapi-private-key-here
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your-vapi-public-key-here
NEXT_PUBLIC_VAPI_ASSISTANT_ID=your-vapi-assistant-id-here

# Supabase - Veritabanı ve gerçek zamanlı veri
# https://supabase.com adresinden proje oluşturun
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ============================================
# KAFKA (Varsayılan Docker ayarları)
# ============================================

KAFKA_BROKERS=localhost:9092

# ============================================
# REDIS (Varsayılan Docker ayarları)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ============================================
# SERVİS PORTLARI
# ============================================

# API Gateway
API_GATEWAY_PORT=3001

# Interview Service
INTERVIEW_SERVICE_PORT=3005

# AI Service
AI_SERVICE_PORT=3006

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
